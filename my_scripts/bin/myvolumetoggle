# amixer -D pulse set Master toggle

pactl set-sink-mute 0 toggle
ALSA_VOLUME=`pactl list sinks | grep '^[[:space:]]Volume:' | \
    head -n $(( $SINK + 1 )) | tail -n 1 | sed -e 's,.* \([0-9][0-9]*\)%.*,\1,'`
echo "V$ALSA_VOLUME" > $PANEL_FIFO &