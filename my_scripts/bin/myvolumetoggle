COLOR_VOLUME_FG='#FF00A0FF'
COLOR_VOLUME_BG='#FF303030'
COLOR_VOLUME_MUTE_FG='#FF000000'
COLOR_VOLUME_MUTE_BG='#FFFF0000'


# for i in "$@"; do
